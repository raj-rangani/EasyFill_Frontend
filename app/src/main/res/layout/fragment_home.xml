<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".HomeFragment"
    android:padding="2sp"
    tools:ignore="hardcodedText">

    <LinearLayout
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:text="Recent Form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="10sp"
        android:id="@+id/userCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:theme="@style/Theme.ViewPagerTest.ProfileCards"
        app:cardCornerRadius="15dp"
        app:contentPadding="12sp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                app:contentPadding="1dp"
                app:cardCornerRadius="12dp"
                android:theme="@style/Theme.ViewPagerTest.ProfileCards"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@drawable/background_line"
                    android:backgroundTint="?colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginStart="4sp"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">

                            <TextView
                                android:includeFontPadding="false"
                                android:textSize="14sp"
                                android:text="Rangani Raj JayeshBhai"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:includeFontPadding="false"
                                android:textSize="10sp"
                                android:text="AADHAR CARD FORM"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            app:icon="@drawable/ic_edit"
                            android:id="@+id/uiMode"
                            android:paddingBottom="5dp"
                            android:focusable="true"
                            android:clickable="true"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:insetLeft="0dp"
                            android:insetRight="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:backgroundTint="?colorPrimary"
                            app:cornerRadius="50dp"
                            app:iconGravity="textEnd"
                            app:iconPadding="0dp"
                            app:iconSize="20dp"
                            app:iconTint="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:progress="50"
                    app:trackThickness="3sp"
                    app:trackColor="?colorPrimaryVariant"
                    app:trackCornerRadius="5dp"
                    app:indicatorColor="?colorPrimary"
                    app:indicatorSize="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:gravity="center_vertical"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="14sp"
                        android:includeFontPadding="false"
                        android:text="50 Percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textSize="12sp"
                        android:includeFontPadding="false"
                        android:text="Form Filled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    app:cornerRadius="50dp"
                    android:backgroundTint="?colorPrimary"
                    android:text="SHARE"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:text="All Forms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/homeRecycleview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>