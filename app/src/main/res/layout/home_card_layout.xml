<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:elevation="1dp"
    android:layout_marginTop="10sp"
    app:cardCornerRadius="15dp"
    android:theme="@style/Theme.ViewPagerTest.ProfileCards"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="?actionBarSize">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/formProgress"
            android:progress="50"
            app:trackThickness="3sp"
            app:trackColor="?colorPrimaryVariant"
            app:trackCornerRadius="5dp"
            app:indicatorColor="?colorPrimary"
            app:indicatorSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:layout_width="match_parent"
                android:id="@+id/formName"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:maxLines="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:includeFontPadding="false"
                android:layout_width="match_parent"
                android:id="@+id/formAuthor"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:maxLines="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_marginEnd="8sp"
            android:id="@+id/fillPercentBackground"
            app:cardCornerRadius="8sp"
            app:cardElevation="0dp"
            android:layout_width="50dp"
            android:layout_height="25dp">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/fillPercent"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.cardview.widget.CardView>