<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:layout_margin="5sp"
                android:id="@+id/back"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_close"
                android:backgroundTint="?colorPrimaryVariant"
                android:tooltipText="close"
                app:cornerRadius="50dp"
                app:iconGravity="textEnd"
                app:iconPadding="0dp"
                app:iconSize="15dp"
                app:iconTint="?colorAccent" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_margin="20sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?colorOnBackground"
                android:text="Let's Create Account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="?colorTertiary"
                android:textSize="16sp"
                android:gravity="center"
                android:text="Create an Easy Fill Account to get all features"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="15sp"
            android:paddingEnd="15sp"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cdUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:theme="@style/Theme.ViewPagerTest.ProfileCards"
                app:cardCornerRadius="15dp"
                app:contentPadding="6sp">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:background="@android:color/transparent"
                        android:id="@+id/icUsername"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/ic_user_circle"
                        app:iconGravity="textEnd"
                        app:iconPadding="0dp"
                        app:iconSize="22dp"
                        app:iconTint="?colorOnBackground" />

                    <EditText
                        android:inputType="text"
                        android:id="@+id/etUsername"
                        android:hint="username"
                        android:layout_marginStart="5sp"
                        android:includeFontPadding="false"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_marginTop="15sp"
                android:layout_marginBottom="10sp"
                android:id="@+id/cdEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:theme="@style/Theme.ViewPagerTest.ProfileCards"
                app:cardCornerRadius="15dp"
                app:contentPadding="6sp">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:background="@android:color/transparent"
                        android:id="@+id/icEmail"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/ic_lock_on"
                        app:iconGravity="textEnd"
                        app:iconPadding="0dp"
                        app:iconSize="22dp"
                        app:iconTint="?colorOnBackground" />

                    <EditText
                        android:inputType="textEmailAddress"
                        android:id="@+id/etEmail"
                        android:hint="email"
                        android:layout_marginStart="5sp"
                        android:includeFontPadding="false"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_marginTop="15sp"
                android:layout_marginBottom="10sp"
                android:id="@+id/cdPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:theme="@style/Theme.ViewPagerTest.ProfileCards"
                app:cardCornerRadius="15dp"
                app:contentPadding="6sp">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:background="@android:color/transparent"
                        android:id="@+id/icContact"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/ic_phone_outline"
                        app:iconGravity="textEnd"
                        app:iconPadding="0dp"
                        app:iconSize="22dp"
                        app:iconTint="?colorOnBackground" />

                    <EditText
                        android:inputType="number"
                        android:id="@+id/etContact"
                        android:hint="phone"
                        android:layout_marginStart="5sp"
                        android:includeFontPadding="false"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_marginTop="15sp"
                android:layout_marginBottom="10sp"
                android:id="@+id/cdPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:theme="@style/Theme.ViewPagerTest.ProfileCards"
                app:cardCornerRadius="15dp"
                app:contentPadding="6sp">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:background="@android:color/transparent"
                        android:id="@+id/icPassword"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/ic_lock_on"
                        app:iconGravity="textEnd"
                        app:iconPadding="0dp"
                        app:iconSize="22dp"
                        app:iconTint="?colorOnBackground" />

                    <EditText
                        android:inputType="textPassword"
                        android:id="@+id/etPassword"
                        android:hint="password"
                        android:layout_marginStart="5sp"
                        android:includeFontPadding="false"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_marginTop="15sp"
                android:layout_marginBottom="10sp"
                android:id="@+id/cdConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:theme="@style/Theme.ViewPagerTest.ProfileCards"
                app:cardCornerRadius="15dp"
                app:contentPadding="6sp">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:background="@android:color/transparent"
                        android:id="@+id/icConfirmPassword"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/ic_lock_on"
                        app:iconGravity="textEnd"
                        app:iconPadding="0dp"
                        app:iconSize="22dp"
                        app:iconTint="?colorOnBackground" />

                    <EditText
                        android:inputType="textPassword"
                        android:id="@+id/etConfirmPassword"
                        android:hint="confirm password"
                        android:layout_marginStart="5sp"
                        android:includeFontPadding="false"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/register"
                app:cornerRadius="50dp"
                android:padding="8dp"
                android:layout_marginTop="10sp"
                android:paddingStart="25sp"
                android:paddingEnd="25sp"
                android:backgroundTint="?colorPrimary"
                android:text="Create Account"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/signIn"
            android:layout_marginTop="40sp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:layout_marginBottom="20sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="?colorTertiary"
                android:textSize="16sp"
                android:gravity="center"
                android:text="Already Have an Easy Fill Account,"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?colorOnBackground"
                android:text="Sign In"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>