<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewPagerTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryVariant">@color/rippleDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bluePrimary</item>
        <item name="colorSecondaryVariant">@color/bluePrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/darkActionBar</item>
        <!-- Color Accent-->
        <item name="colorAccent">#FBFBFB</item>
        <item name="colorOutline">#353535</item>
        <item name="colorTertiary">#CDCDCD</item>
        <!-- Customize your theme here. -->
        <!-- <item name="android:windowBackground">@color/black</item> -->
        <item name="actionBarStyle">@style/Theme.ViewPagerTest.ActionBar</item>
        <item name="bottomSheetStyle">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="Theme.ViewPagerTest.BottomNavBar" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/bottomNavDark</item>
        <item name="android:backgroundTint">@color/bottomNavDark</item>
    </style>

    <style name="Theme.ViewPagerTest.ProfileCards" parent="">
        <item name="backgroundTint">@color/darkActionBar</item>
        <item name="android:backgroundTint">@color/darkActionBar</item>
    </style>

    <style name="Theme.ViewPagerTest.ProfileDataCards" parent="">
        <item name="backgroundTint">#000</item>
        <item name="android:backgroundTint">#000</item>
    </style>

    <style name="Theme.ViewPagerTest.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/darkActionBar</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="Theme.ViewPagerTest.appBar" parent="@style/ThemeOverlay.Material3.Toolbar.Surface">
        <item name="android:backgroundTint">@color/bottomNavDark</item>
        <item name="backgroundTint">@color/bottomNavDark</item>
    </style>

    <style name="Theme.ViewPagerTest.roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Theme.ViewPagerTest.roundedProfileImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25sp</item>
    </style>

    <style name="Theme.ViewPagerTest.bottomDialog" parent="">
        <item name="android:backgroundTint">@color/bottomNavDark</item>
        <item name="android:background">@drawable/bg_dialog</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="Theme.ViewPagerTest.DatePicker" parent="">
        <item name="android:backgroundTint">#4A4A4A</item>
        <item name="backgroundTint">#4A4A4A</item>
    </style>

    <style name="Theme.ViewPagerTest.TextBox" parent="">
        <item name="android:backgroundTint">#4A4A4A</item>
    </style>

    <style name="Theme.ViewPagerTest.OkButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Theme.ViewPagerTest.CancelButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
</resources>